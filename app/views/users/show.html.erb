<main>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-mb-3">
        <h2>User info</h2>
        
        <% if @user.image.attached? %>
          <%= image_tag @user.image, size: "100x100" %>
        <% else %>
          <%= image_tag 'no_image', size: "100x100" %>
        <% end %>
        
        <table class="table">
          <tbody>
             <tr></tr>
             <tr>
               <th>name</th>
               <th><%= @user.name %></th>
             </tr>
             <tr>
               <th>introduction</th>
               <th><%= @user.introduction %></th>
             </tr>
           </tbody>
         </table>
         <div class="row">
         <%= link_to edit_user_path(current_user.id),class:"btn btn-outline-secondary btn-block" do %>
         <i class="fas fa-user-cog"></i>
         <% end %>
         </div>
         
         
         <h2 class ="mt-3">New book</h2>
           <%= form_with model: @book do |f| %>
            <h4>Title</h4>
            <%= f.text_field :title %>
          	
            <h4>Opinion</h4>
            <%= f.text_area :body %>
          	
            <%= f.submit 'Createbook',class: "btn" %>
        <% end %>
    </div>
          
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      
      <table class="table table-hover table-inverse">
      <%= @books.each do |book| %>
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
            </tr>
            </thead>
            <tbody>
            <th><%= book.title %></th>
            
            <th><%= book.opinion %></th>
            </tbody>
       </table>
      <% end %>
    </div>
          
          
  </main>