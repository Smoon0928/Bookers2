<main>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-mb-3">
        <h2>User info</h2>
        
        <% if @user.image.attached? %>
          <%= image_tag @user.image, size: "100x100" %>
        <% else %>
          <%= image_tag 'no_image', size: "100x100" %>
        <% end %>
        
        <table class="table">
          <tbody>
             <tr></tr>
             <tr>
               <th>name</th>
               <th><%= @user.name %></th>
             </tr>
             <tr>
               <th>introduction</th>
               <th><%= @user.introduction %></th>
             </tr>
           </tbody>
         </table>
         <div class="row">
         <%= link_to edit_user_path(current_user.id),class:"btn btn-outline-secondary btn-block" do %>
         <i class="fas fa-user-cog"></i>
         <% end %>
         </div>
         
         
         <h1>New book</h1>
           <%= form_with model: Book.new do |f| %>
            <h4>Title</h4>
            <%= f.text_field :title %>
          	
            <h4>Opinion</h4>
            <%= f.text_area :body %>
          	
            <%= f.submit 'Createook' %>
    <% end %>
          
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <%= @books.each do |book| %>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th><%= @book.title %></th>
          </tr>
            <th><%= @book.opinion %></th>
        </thead>
        <tbody></tbody>
      </table>
      <% end %>
    </div>
          
          
  </main>