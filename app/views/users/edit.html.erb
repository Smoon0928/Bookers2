<script src="https://kit.fontawesome.com/50474a9a7c.js" crossorigin="anonymous"></script>
  <p id="notice"></p>
  <div class="container">
    <div class="row">
      <div class="col-sm12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        
        <h2>User info</h2>
        <% if @user.errors.any? %>
          <%= @user.errors.count %>error prohibited this obj from being saved:
          <ul>
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        <% end %>
        <%= form_with model: @user, url: user_path, method: :patch do |f| %>
          <label for="user_name">Name</label>
          <br>
          <%= f.text_field :name %>
          <br>
          <div class="form-group">
            <label for="user_image">Image</label>
            <br>
            <%= f.file_field :profile_image, accept: "image/*" %> 
        	</div>
          <label for="introduction">Introductione</label>
            <br>
            <%= f.text_area :introduction %>
          	<br>
            <%= f.submit 'Update User',class:"btn btn-secondary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>