<main>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-mb-3">
        <h2>投稿成功User info</h2>
        
        <% if @user.image.attached? %>
          <%= image_tag @user.image, size: "100x100" %>
        <% else %>
          <%= image_tag 'no_image', size: "100x100" %>
        <% end %>
        
        <table class="table">
          <tbody>
             <tr></tr>
             <tr>
               <th>name</th>
               <th><%= @user.name %></th>
             </tr>
             <tr>
               <th>introduction</th>
               <th><%= @user.introduction %></th>
             </tr>
           </tbody>
         </table>
         <div class="row">
         <%= link_to edit_user_path(current_user.id),class:"btn btn-outline-secondary btn-block" do %>
         <i class="fas fa-user-cog"></i>
         <% end %>
         </div>
         
         
         
         <h2 class ="mt-3">New book</h2>
           <%= form_with model: @book do |f| %>
            <h4>Title</h4>
            <%= f.text_field :title %>
          	
            <h4>Opinion</h4>
            <%= f.text_area :body %>
          	
          	  <%= f.submit 'Createbook',class: "btn" %>
        <% end %>
    </div>
    
    
    
    
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      
      <table class="table">
        <tbody>
          <tr>
            <td>
                <% if @user.image.attached? %>
                <%= image_tag @user.image, size: "100x100" %>
              <% else %>
                <%= image_tag 'no_image', size: "100x100" %>
              <% end %>
              <br>
              <%= link_to @user.name, user_path(user.id) %>
            </td>
            <td>
            <td><%= @book.title %></td>
            <td><%= @book.body %></td>
            <td>Edit</td>
            <td>
             <% if @book.user == current_user %>
               <%= link_to "destroy", book_path, method: :delete %>
            <% end %>
            </td>
            </tr>
          </tbody>
         </table>
        </div>
       </div> 
      </div>
     </main>
      
      
      